{
  "compilerOptions": {
    "target": "ES2020", // Use the appropriate target for your environment
    "module": "Node16", // Use CommonJS module system
    "moduleResolution": "Node16", // Resolve modules using Node.js conventions
    "baseUrl": "./src", // Base directory for module resolution
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory for input files
    "esModuleInterop": true, // Enable compatibility between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure file name casing consistency
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "resolveJsonModule": true, // Support importing JSON files
    "sourceMap": true, // Generate source maps for debugging
    "noImplicitAny": true // Raise error on expressions and declarations with an implied 'any' type
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules directory
}

